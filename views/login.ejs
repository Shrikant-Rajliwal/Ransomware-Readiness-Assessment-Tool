<% include ./includes/header.ejs %>
<% include ./includes/flash.ejs %>



<div class="container" style="margin-top: 50px; margin-bottom: 6rem;">
    <h3 class="col-6 offset-3" style="margin-top: 3rem;">Login on RRA</h3>

    <div class="row" style="justify-content: center;">
        <div class="col-6" style="margin-top: 20px;">
            <form action="/login" method="post" class="needs-validation" style="margin-top: 20px;">
                <div class="form-group" style="margin-bottom: 20px;">
                    <label for="username" style="font-weight: bold;">Username</label>
                    <input required class="form-control" type="text" id="username" name="username" style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ced4da;">
                </div>
                <div class="form-group" style="margin-bottom: 20px;">
                    <label for="password" style="font-weight: bold;">Password</label>
                    <input required class="form-control" type="password" id="password" name="password" style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ced4da;">
                </div>

                <button type="submit" class="btn btn-success mt-3" style="background-color: #28a745; border-color: #28a745; color: #fff; padding: 10px 20px; border-radius: 5px;">Login</button>
            </form>
        </div>
    </div>
</div>

